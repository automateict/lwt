<table class="table table-striped dataTable js-exportable">
  <thead>
  <tr>
    <th>#</th>
    <th>Title</th>
    <th>Created By</th>
    <th>Petition to</th>
    <th>Sector</th>
    <th>Status</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @petitions.each do |petition| %>
      <% counter = 1 %>
      <tr>
        <td><%= counter %></td>
        <td><%= petition.title %></td>
        <td><%= petition.user %></td>
        <td><%= petition.organization_unit %></td>
        <td><%= petition.sector %></td>
        <td><label class="label <%= petition.status == Constants::PENDING ? 'label-warning' :
                                            (petition.status == Constants::REJECTED ? 'label-danger' :
                                                 (petition.status == Constants::RESOLVED ? 'label-success' : 'label-default')) %>">
        <%= petition.status %>
      </label>
        <td>
          <%= link_to petition do %>
              <button type="button" class="btn btn-outline btn-primary"><i class="fa fa-list"></i> Details</button>
          <% end %>
          <%= link_to edit_petition_path(petition) do %>
              <button type="button" class="btn btn-outline btn-primary"><i class="fa fa-edit"></i> Edit</button>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>