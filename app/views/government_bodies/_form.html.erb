<%= simple_form_for(@government_body) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :government_body_type %>
    <%= f.input :name %>
    <%= f.association :region %>
    <%= f.input :city %>
    <%= f.input :url %>
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
