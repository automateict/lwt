<%= content_for :header do %>
    <div class="row">
      <div class="col-sm-6">
    <div class="panel panel-default">
<div class="panel-heading">
  My Petitions
</div>
<div class="panel-body">
<table class="table table-striped dataTable js-exportable">
  <thead>
  <tr>
    <th>#</th>
    <th>Title</th>
    <th>Created By</th>
    <th>Petition to</th>
    <th>Sector</th>
    <th>Status</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @petitions.each do |petition| %>
      <% counter = 1 %>
      <tr>
        <td><%= counter %></td>
        <td><%= petition.title %></td>
        <td><%= link_to petition.user, petition.user %></td>
        <td><%= petition.organization_unit %></td>
        <td><%= petition.sector %></td>
        <td><%= petition.status %></td>
        <td>
          <%= link_to 'Details', petition %> |
          <%= link_to 'Edit', edit_petition_path(petition) %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
</div>
    </div>
      </div>
      <div class="col-sm-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            My Complaints
          </div>
          <div class="panel-body">
            <table class="table table-striped table-responsive dataTable js-exportable">
              <thead>
              <tr>
                <th>#</th>
                <th>Complaint by</th>
                <th>Complaint Recipient</th>
                <th>Title</th>
                <th>Status</th>
                <th></th>
              </tr>
              </thead>

              <tbody>
              <% counter = 1 %>
              <% @complaints.each do |complaint| %>
                  <tr>
                    <td><%= counter %></td>
                    <td><%= link_to complaint.user, complaint.user %></td>
                    <td><%= complaint.organization_unit %></td>
                    <td><%= complaint.title %></td>
                    <td><%= complaint.status %></td>
                    <td><%= link_to 'Details', complaint %> |
                      <%= link_to 'Edit', edit_complaint_path(complaint) %> |
                      <%= link_to 'Delete', complaint, method: :delete, data: { confirm: 'Are you sure?' } %>
                    </td>
                  </tr>
                  <% counter += 1 %>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
<% end %>
