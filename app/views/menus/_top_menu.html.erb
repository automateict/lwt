<% if current_user %>
    <li class="dropdown email-menu">
      <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button">
        <span class="btn btn-default">NEW PETITIONS <i class="material-icons">notifications</i></span>
        <span class="label-count"><%= current_user.load_petitions.count %></span>
      </a>
      <ul class="dropdown-menu">
        <li class="header">New Petitions</li>
        <li class="body">
          <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: 255px;"><ul class="menu" style="overflow: hidden; width: auto; height: 255px;">
            <li>
              <% current_user.load_petitions.each do |p| %>
                <li>
                  <%= link_to p do %>
                      <div class="info">
                        <h4><%= p.title %></h4>
                        <span class="time"><i class="material-icons">access_time</i> <%= distance_of_time_in_words_to_now(p.created_at) %></span>
                      </div>
                  <% end %>
                </li>
                <% end %>
            </li>
          </ul><div class="slimScrollBar" style="background: rgba(0, 0, 0, 0.5) none repeat scroll 0% 0%; width: 4px; position: absolute; top: 0px; opacity: 0.4; display: none; border-radius: 0px; z-index: 99; right: 1px; height: 202.57px;"></div><div class="slimScrollRail" style="width: 4px; height: 100%; position: absolute; top: 0px; display: none; border-radius: 0px; background: rgb(51, 51, 51) none repeat scroll 0% 0%; opacity: 0.2; z-index: 90; right: 1px;"></div></div>
        </li>
      </ul>
    </li>

    <li class="dropdown email-menu">
      <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button">
        <span class="btn btn-default">NEW COMPLAINTS<i class="material-icons">notifications</i></span>
        <span class="label-count"><%= current_user.load_complaints.count %></span>
      </a>
      <ul class="dropdown-menu">
        <li class="header">New Complaints</li>
        <li class="body">
          <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: 255px;"><ul class="menu" style="overflow: hidden; width: auto; height: 255px;">
            <li>
              <% current_user.load_complaints.each do |c| %>
                <li>
                  <%= link_to c do %>
                      <div class="info">
                        <h4><%= c.title %></h4>
                        <span class="time"><i class="material-icons">access_time</i> <%= distance_of_time_in_words_to_now(c.created_at) %></span>
                      </div>
                  <% end %>
                </li>
            <% end %>
            </li>
          </ul><div class="slimScrollBar" style="background: rgba(0, 0, 0, 0.5) none repeat scroll 0% 0%; width: 4px; position: absolute; top: 0px; opacity: 0.4; display: none; border-radius: 0px; z-index: 99; right: 1px; height: 202.57px;"></div><div class="slimScrollRail" style="width: 4px; height: 100%; position: absolute; top: 0px; display: none; border-radius: 0px; background: rgb(51, 51, 51) none repeat scroll 0% 0%; opacity: 0.2; z-index: 90; right: 1px;"></div></div>
        </li>
      </ul>
    </li>

    <li class="dropdown user-menu">
      <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">
        <%= image_tag current_user.photo rescue nil %>
        <span class="hidden-xs"><%= current_user.full_name %></span>
      </a>
      <ul class="dropdown-menu">
        <li class="header">
          <%= image_tag current_user.photo %>
          <div class="user">
            <%= current_user.full_name %>
            <div class="title"><%= current_user.email %></div>
          </div>
        </li>
        <li class="body">
          <ul>
            <li>
              <%= link_to current_user do %>
                  <i class="material-icons">account_circle</i> Profile
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_path do %>
                  <i class="material-icons">lock_open</i> Change Password
              <% end %>
            </li>
          </ul>
        </li>
        <li class="footer">
          <%= link_to 'Log Out', destroy_user_session_path,class: "btn btn-default btn-sm btn-block" %>
        </li>
      </ul>
    </li>
    </li>
<% else %>
    <li>
      <%= link_to new_user_session_path do %>
          <i class="material-icons">account_circle</i> Sign in
      <% end %>
    </li>
<% end %>

<li>
  <a href="javascript:void(0);" class="js-search" data-close="true">
    <i class="material-icons">search</i>
  </a>
</li>

<li>
  <a href="javascript:void(0);" class="fullscreen js-fullscreen">
    <i class="material-icons">fullscreen</i>
  </a>
</li>