<div class="row justify-content-center">
  <div class="col-sm-6">
  <%= simple_nested_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-signin'}) do |f| %>
      <h1 class="h3 mb-3 font-weight-normal">Please sign up to continue</h1>
      <%= f.simple_fields_for :person do |pf| %>
        <%= pf.text_field :first_name, class: "form-control", placeholder:"First Name", autofocus: true %>
        <%= pf.text_field :father_name, class: "form-control", placeholder:"Father Name", autofocus: true %>
        <%= pf.text_field :grand_father_name, class: "form-control", placeholder:"Grand Father Name", autofocus: true %>
      <% end %>
      <%= f.text_field :email, class: "form-control", placeholder:"Email", autofocus: true %>
      <%= f.password_field :password, class: "form-control", placeholder:"Password", autofocus: true %>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder:"Confirm Password", autofocus: true %>
      <%= f.submit "Sign up",class: "btn btn-lg btn-primary btn-block"  %>
      <br/><br/><br/>
        <i class="icon-like fa-3x text-success"></i> <%= link_to 'Sign in if you already have account', new_user_session_path %>
      <br/>
  <% end %>
  </div>
</div>
