<center>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-signin'}) do |f| %>
      <h1 class="h3 mb-3 font-weight-normal">Please sign up to continue</h1>
      <%= f.text_field :first_name, class: "form-control", placeholder:"First Name", autofocus: true %>
      <%= f.text_field :father_name, class: "form-control", placeholder:"Father Name", autofocus: true %>
      <%= f.text_field :grand_father_name, class: "form-control", placeholder:"Grand Father Name", autofocus: true %>
      <%= f.text_field :email, class: "form-control", placeholder:"Email", autofocus: true %>
      <%= f.password_field :password, class: "form-control", placeholder:"Password", autofocus: true %>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder:"Confirm Password", autofocus: true %>
      <%= f.submit "Sign up",class: "btn btn-lg btn-primary btn-block"  %>
      <br/>OR<br/><br/>
      <%= link_to 'Sign in', new_user_session_path, class: "btn btn-lg btn-success btn-block" %>
      <br/>
  <% end %>
</center>
