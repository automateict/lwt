  <%= simple_nested_form_for(@user) do |f| %>
      <div class="row">
      <div class="col-sm-6 left_form">
          <%= f.association :organization_unit, collection: [f.object.organization_unit], prompt: true %>
          <%= f.input :title %>
          <%= f.input :first_name %>
          <%= f.input :father_name %>
          <%= f.input :grand_father_name %>
          <%= f.input :photo, as: :file %>
          <%= f.input :about, wrapper: 'vertical_form', input_html: {class: 'wysihtml5'} %>
      </div>
      <div class="col-sm-6">
          <%= f.input :email %>
          <%= f.input :password %>
          <%= f.input :password_confirmation, label: 'Confirm Password' %>
          <%= f.input :role, collection: User::ROLES, as: :radio_buttons, wrapper_html: {class: 'single_columned_list'} %>
      </div>
      </div>
      <div class="form-actions">
        <%= f.submit "Save",class: "btn btn-lg btn-primary"  %>
      </div>
  <% end %>
