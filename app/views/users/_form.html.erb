<center>
  <%= simple_form_for(@user) do |f| %>
      <%= f.input :first_name %>
      <%= f.input :father_name %>
      <%= f.input :grand_father_name %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation, label: 'Confirm Password' %>
      <%= f.association :role %>
      <hr/>
      <%= f.submit "Sign up",class: "btn btn-lg btn-primary"  %>
  <% end %>
</center>
