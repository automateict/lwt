<table class="table table-hover dataTable js-exportable">
  <thead>
  <tr>
    <th>Email</th>
    <th>Role</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
          <%= link_to edit_user_path(user) do %>
            <button type="button" class="btn btn-outline btn-primary"><i class="fa fa-edit"></i> Edit</button>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<hr/>
<%= link_to new_user_path do %>
    <button type="button" class="btn btn-outline btn-primary"><i class="fa fa-plus"></i> Add New User</button>
<% end %>