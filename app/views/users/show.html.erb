<div class="panel-heading">
  User Details
</div>
<div class="panel-body">
<div class='row'>
  <div class='col-sm-4'>
    <%= image_tag @user.photo, width: "200px" %>
  </div>
  <div class='col-sm-8'>
    <div class='row'>
      <div class='col-sm-2'><b>Organization Unit</b></div>
      <div class='col-sm-10'><%= @user.organization_unit %></div>
    </div>
    <div class='row'>
      <div class='col-sm-2'><b>Name</b></div>
      <div class='col-sm-10'><%= @user.full_name %></div>
    </div>

    <div class='row'>
      <div class='col-sm-2'><b>Email</b></div>
      <div class='col-sm-10'><%= @user.email %></div>
    </div>

    <div class='row'>
      <div class='col-sm-2'><b>Role</b></div>
      <div class='col-sm-10'><%= @user.role %></div>
    </div>

    <div class='row'>
      <div class='col-sm-2'><b>About</b></div>
      <div class='col-sm-10'><%= @user.about %></div>
    </div>

    <hr/>
    <%= link_to edit_user_path(@user) do %>
        <button type="button" class="btn btn-outline btn-primary"><i class="fa fa-edit"></i> Edit</button>
    <% end %>
  </div>
</div>
</div>