<%= simple_form_for(@person) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :first_name %>
    <%= f.input :father_name %>
    <%= f.input :grand_father_name %>
    <%= f.input :profession %>
    <%= f.input :phone %>
    <%= f.input :photo, as: :file %>
    <%= f.input :about %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
