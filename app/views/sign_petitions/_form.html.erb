<%= simple_form_for(@sign_petition) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :petition %>
    <%= f.input :full_name %>
    <%= f.input :email %>
    <%= f.input :remark %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
