<%= simple_form_for(@department) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :organization_unit %>
    <%= f.input :name %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
